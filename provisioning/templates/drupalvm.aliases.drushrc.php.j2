/**
 * Drupal VM drush aliases.
 *
 * @see example.aliases.drushrc.php.
 */

{% for vhost in drush_aliases %}
$aliases['{{ vhost }}'] = array(
  'uri' => '{{ vhost }}.{{ drupal_domain }}',
  'root' => '/var/www/{{ vhost }}',
  'remote-host' => '{{ vhost }}.{{ drupal_domain }}',
  'remote-user' => 'vagrant',
  'ssh-options' => '-o PasswordAuthentication=no -i ~/.vagrant.d/insecure_private_key',
);

{% endfor %}
